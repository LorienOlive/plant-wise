{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "node",
      "react",
      "react-dom",
      "react-router-dom",
      "styled-components"
    ]
  },
  "include": [
    "src",
    "src/app/*/**.ts"
  ],
  "exclude": [
    "node_modules",
    "src/app/*.env.d.ts"
  ]
}
